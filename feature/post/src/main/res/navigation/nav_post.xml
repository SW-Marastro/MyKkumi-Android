<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_post">

    <fragment
        android:id="@+id/postEditFragment"
        android:name="com.swmarastro.mykkumi.feature.post.PostEditFragment"
        android:label="fragment_post_edit"
        tools:layout="@layout/fragment_post_edit">

        <argument
            android:name="postId"
            app:argType="integer"
            android:defaultValue="-1"/>

        <deepLink
            app:uri="mykkumi://post.edit?postId={postId}"/>

    </fragment>

    <fragment
        android:id="@+id/imagePickerFragment"
        android:name="com.swmarastro.mykkumi.feature.post.image.ImagePickerFragment"
        android:label="fragment_image_picker"
        tools:layout="@layout/fragment_image_picker">

        <argument
            android:name="selectImages"
            app:argType="com.swmarastro.mykkumi.feature.post.image.ImagePickerArgument"
            app:nullable="true"
            android:defaultValue="@null"/>

        <deepLink
            app:uri="mykkumi://image.picker?selectImages={selectImages}"/>

    </fragment>

</navigation>
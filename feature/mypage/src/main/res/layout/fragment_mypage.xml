<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MypageFragment"
    android:id="@+id/mypageFragment">

    <data>
        <variable
            name="vm"
            type="com.swmarastro.mykkumi.feature.mypage.MypageViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="60dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_mykkumi_character_notice"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/text_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/neutral_800"
            android:fontFamily="@font/pretendard_bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/img_logo"/>

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="로그아웃"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/pretendard_bold"
            android:background="@drawable/shape_btn_round"
            android:layout_below="@id/text_test"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/btn_sign_out"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="탈퇴하기"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/pretendard_bold"
            android:background="@drawable/shape_btn_round"
            android:layout_below="@id/btn_logout"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</layout>
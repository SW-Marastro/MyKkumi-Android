<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_post_writer">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">

        <ImageView
            android:id="@+id/image_writer_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>

        <!--android:text="@{item.writer.nickname}"-->
        <TextView
            android:id="@+id/text_writer_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/image_writer_profile"
            android:layout_alignParentTop="true"/>

        <!--android:text="@{item.category + '-' + item.subCategory}"-->
        <TextView
            android:id="@+id/text_post_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_toRightOf="@id/image_writer_profile"
            android:layout_alignParentBottom="true"/>

        <ImageButton
            android:id="@+id/btn_post_more_menu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_more_menu_dots"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape_tooltip_background"
        android:paddingVertical="4dp"
        android:paddingHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="20dp"
        android:layout_gravity="center_vertical"
        android:elevation="5dp">

        <TextView
            android:id="@+id/text_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:textColor="@color/neutral_800"
            android:textSize="13sp"
            android:fontFamily="@font/pretendard_medium"/>

        <TextView
            android:id="@+id/btn_update_product_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:gravity="center_vertical"
            android:text="@string/update_product_info_of_pin"
            android:textColor="@color/neutral_400"
            android:textSize="13sp"
            android:fontFamily="@font/pretendard_medium"/>

        <View
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:background="@color/neutral_400"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/btn_delete_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:gravity="center_vertical"
            android:text="@string/delete_pin_of_image"
            android:textColor="@color/neutral_400"
            android:textSize="13sp"
            android:fontFamily="@font/pretendard_medium"/>

    </LinearLayout>

</LinearLayout>